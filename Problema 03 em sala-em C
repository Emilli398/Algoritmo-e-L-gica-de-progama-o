#include <stdio.h>

int main() {
    int numero;

    // Solicita ao usuário que digite um número
    printf("Digite um número inteiro: ");
    scanf("%d", &numero);

    // Verifica se é par ou ímpar usando o operador de resto
    if (numero % 2 == 0) {
        printf("O número %d é PAR.\n", numero);
    } else {
        printf("O número %d é ÍMPAR.\n", numero);
    }

    return 0;
}
